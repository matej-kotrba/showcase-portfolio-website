---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap');

	:root {
		/* COLORS */
		--background: #171717;
		--secondary: #444444;
		--primary: #DA0037;
		--text: #EDEDED;
		--text-darker: #666666;
		--landing-bg: #080808;

		/* Code block */
		--codeblock-specifier: #60A0FF;
		--codeblock-selector: #36FFF3;
		--codeblock-value: #F4AE6D;
		--codeblock-rest: #D6D6D6;

		/* Projects - Effio */
		--effio-primary: #0092ca;
		--effio-secondary: #393e46;
		--effio-background: #111111;

		/* TYPOGRAPHY */
		--h1: 53.8px;
		--h2: 44.8px;
		--h3: 37.3px;
		--h4: 31.1px;
		--h5: 25.9px;
		--h6: 21.6px;
		--body: 18px;
		--small: 15px;

		--landing: 128px;
		--landing-bg: 300px;

		/* FONTS */
		--font-default: 'Rubik', sans-serif;
	}

	body {
		font-family: var(--font-default);
		color: var(--text);
		background-color: var(--background);
	}
</style>
